- @title = @tag.name

- content_for :header do
  .header-container
    .container
      %h1.page-heading
        .float-right
          = render "layouts/edit_delete_dropdown", edit_url: edit_tag_path(@tag), delete_url: @tag, delete_confirmation: "Delete #{@tag.name}?"
        = @title

.dashboard-container
  = render "forms/horizontal/show/text", object: @tag, key: :name
  = render "forms/horizontal/show/generic", title: "Moves", content: render("tags/moves", tag: @tag)

