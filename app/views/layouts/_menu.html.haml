%nav.navbar.navbar-default.navbar-fixed-top{ role: 'navigation' }
  .container
    .navbar-header
      %button.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '.navbar-full-menu' } }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to ENV['website_name'], root_path, class: 'navbar-brand'
      = link_to @menu_title || @title, '#top', data: { object: 'remove-collapse-in scroll-anchor', target: '.navbar-full-menu' }, class: 'navbar-brand page-title' if @menu_title || @title

    .collapse.navbar-collapse.navbar-full-menu
      %ul.nav.navbar-nav
        %li{ class: "#{'active' if current_page?(moves_path) || current_page?(moves_path)}" }
          = link_to moves_path do
            %span.glyphicon.glyphicon-book
            Moves
        %li{ class: "#{'active' if current_page?(tags_path) || current_page?(tags_path)}" }
          = link_to tags_path do
            %span.glyphicon.glyphicon-tag
            Tags
        %li.visible-xs
          = link_to moves_path do
            %span.glyphicon.glyphicon-book
            Moves
        %li.visible-xs
          = link_to tags_path do
            %span.glyphicon.glyphicon-tag
            Tags

      - if current_user
        %form.navbar-form.navbar-right.hidden-sm
          = link_to 'Logout', destroy_user_session_path, class: 'btn btn-primary-dark'

        %ul.nav.navbar-nav.navbar-right
          %li.dropdown.hidden-xs
            = link_to '#', class: 'dropdown-toggle', data: { object: 'dropdown', toggle: 'dropdown' } do
              = current_user.first_name
              %span.caret
            %ul.dropdown-menu{ role: 'menu' }
              %li
                = link_to moves_path do
                  %span.glyphicon.glyphicon-book
                  Moves
              %li.divider
              %li.disabled
                = link_to '#', data: { object: 'suppress-click' } do
                  %span.glyphicon.glyphicon-tree-conifer
                  Salsa
                  = "v#{Salsa::VERSION::STRING}"
              %li.divider.visible-sm
              %li.visible-sm
                = link_to destroy_user_session_path do
                  %span.glyphicon.glyphicon-log-out
                  Logout
      - else
        %form.navbar-form.navbar-right
          = link_to 'Sign in', new_user_session_path, class: 'btn btn-primary-dark'
